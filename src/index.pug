include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .welcome#welcome    
        .parallax
          .parallax__header.parallax__layer(data-speed="0.01")
            picture
              - var PH_1800_1x =  require("images/content/paralax_header-1800@1x.jpg");
              - var PH_1800_2x =  require("images/content/paralax_header-1800@2x.jpg");
              source(media="(min-width:1200px)"  srcset=`${PH_1800_1x} 1x ,${PH_1800_2x}  2x`)
              - var PH_1200_1x  =  require("images/content/paralax_header-1200@1x.jpg");
              - var PH_1200_2x =  require("images/content/paralax_header-1200@2x.jpg");         
              source(media="(min-width:768px)"  srcset=`${PH_1200_1x} 1x ,${PH_1200_2x}  2x`)
              img(src="#"   class="parallax__header__img parallax__img")         
          .parallax__paralax_holm.parallax__layer(data-speed="0.2")
            picture
              - var PHo_1800_1x =  require("images/content/paralax_holm-1800@1x.png");
              - var PHo_1800_2x =  require("images/content/paralax_holm-1800@2x.png");           
              source(media="(min-width:1200px)"  srcset=`${PHo_1800_1x} 1x ,${PHo_1800_2x}  2x`)
              - var PHo_1200_1x =  require("images/content/paralax_holm-1200@1x.png");
              - var PHo_1200_2x =  require("images/content/paralax_holm-1200@2x.png");                  
              source(media="(min-width:768px)"  srcset=`${PHo_1200_1x} 1x ,${PHo_1200_2x}  2x`)
              img(src="#"   class="paralax_holm__img parallax__img")         
          .parallax__paralax_most.parallax__layer(data-speed="0.4")
            picture
              - var PM_1800_1x =  require("images/content/paralax_most-1800@1x.png");
              - var PM_1800_2x =  require("images/content/paralax_most-1800@2x.png");              
              source(media="(min-width:1200px)"  srcset=`${PM_1800_1x} 1x ,${PM_1800_2x}  2x`)
              - var PM_1200_1x =  require("images/content/paralax_most-1200@1x.png");
              - var PM_1200_2x =  require("images/content/paralax_most-1200@2x.png");                  
              source(media="(min-width:768px)"  srcset=`${PM_1200_1x} 1x ,${PM_1200_2x}  2x`)
              img(src="#"   class="paralax_most__img parallax__img")               

          .parallax__paralax_footer.parallax__layer(data-speed="0.4")
            picture
              - var PF_1800_1x =  require("images/content/paralax_footer-1800@1x.png");
              - var PF_1800_2x =  require("images/content/paralax_footer-1800@2x.png");                 
              source(media="(min-width:1200px)"  srcset=`${PF_1800_1x} 1x ,${PF_1800_2x}  2x`)
              - var PF_1200_1x =  require("images/content/paralax_footer-1200@1x.png");
              - var PF_1200_2x =  require("images/content/paralax_footer-1200@2x.png");                    
              source(media="(min-width:768px)"  srcset=`${PF_1200_1x} 1x ,${PF_1200_2x}  2x`)
              img(src="#"   class="paralax_footer__img parallax__img")     
        section.one-block
          header.header
            .container
              .top-block.row
                .logo.top-block__element.lg-2
                  .logo__link ИИ
                .menu.top-block__element.lg-8
                  .block__mobile
                    .menu__mobile-button__container
                      button.mobile-button
                        +icon('menu','mobile-button__svg')
                  .block__desktop
                    +nav('nav')            
                +sohibal('sohibal',['instagram','vkontakte','github'],'top-block__element lg-2')
          .title-site
            .title-site__container
              +title('')
          .scroll.block__desktop
            a.scroll__link(href="#about")
              .scroll__text Скролл
              .scroll__icon
                +icon('scroll', 'scroll__icon')
        section#about.about
          .container
            .about__container
              .about__block
                .about__left
                  .about__image
                    +image('content/photo__my.jpg', 'photo__my')
                  .about__desciption
                    +desciption('desciption-block')
                .about__right
                  .about__title-mini #{about.hellow}
                  h2.about__title #{about.name} #{about.fistname}
                  .about__text 
                    p !{about.text}
                  .about__text-dop
                    p !{about.text_dop}

      section.skills
          .skills-bg__container
            .skills-bg2__container
              .container.row
                .skills__container
                  .skills__title  #{skill.skill_title}
                  .skills__text   #{skill.skill_text}
                  .values__widget.skills__block
                    #skills-component


      section#work.work
          .container
            .work__title #{work_title}            
            #work-component
      .reviews__contact
        .reviews__contact-bg2__container
          section#reviews.reviews
              #reviews-component

                        
          
          section#contact.contact
            .container
              .contact__title__container
                h2.section-title.contact__contact__title--text  #{contact_title}
              .form-container.row
                .form
                  each contact in contacts
                    if contact.svg != 'chat'
                      .form__item-one__container
                        .form__item                        
                              .form__item__icon 
                                .form__item__icon__container
                                  +icon(`${contact.svg}`,'form__item__icon_avator')      
                              .form__item__container
                                label.form__item__title #{contact.label}
                                input(class="form__item_input" placeholder=`${contact.placeholder}` )
                    if contact.svg == 'chat'
                      .form__item.form__item__textarea--width
                        
                          .form__item__icon 
                            .form__item__icon__container
                              +icon(`${contact.svg}`,'form__item__icon_avator')      
                          .form__item__container
                            label.form__item__title #{contact.label}
                            textarea(class="form__item_input form__item__textarea" placeholder=`${contact.placeholder}`)
                  .form__button__container
                    button.form__button #{contact_button}
      
      
      footer#footer.footer
          .container.footer__container.row
            .footer__left
              .footer__left__date © 2020
              .footer__left__about
                  .left__about__block
                    +title_footer('__size_m')
                       
              
            .footer__right
              +nav('nav')
              .footer__content
                .footer__text_dop__block
                  .footer__text_dop 
                    p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
                  .footer__text_icon
                    +sohibal('sohibal',['instagram','vkontakte','github'],'footer-block__element')  
                .footer__text
                  .footer__text__thoughts !{about.thoughts}
                  .footer__text__autor !{about.thoughts_a} 
                  
