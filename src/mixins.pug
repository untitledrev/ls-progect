mixin wors_privie(className,type)
  if type == 2
    .buttons__contener
      .slider__buttons
        .slider-button
          button.slider-buttons__item.slider-buttons__item--slide--prev.active
            +icon('arrow-down', 'strekli_right__svg')        
          button.slider-buttons__item.slider-buttons__item--slide--next
            +icon('arrow-down', 'strekli_left__svg')
  ul(class=`${className}__list`)

    each item, index in wors
      - var number = index + 1
      if index == 0
        - var active= 'active'
      else
        - var active= ''

      li(class=`${className}__item ${active}`)
        +image(`content/${item.image}`, `${className}__pictere`)
        if type == 1
          span(class=`${className}__bg-number`) #{number}


mixin works__content()
  .works__tags
    each tags , index in wors
      - var number = index + 1
      if index == 0
        - var active= 'active'
      else
        - var active= ''
      div(class=`works__tag ${active}`)
        ul.tags
            each tag in tags.skill
              li.tags__item #{tag}
        .works__text
          h3.works__title #{tags.name}
          .works__desc-text
            p #{tags.des}
            a(class="iconed-link" href=`${tags.url}` target="_blank")
              .iconed-link__icon 
                +icon('link','link__icon__svg')
              .iconed-link__text Посмотреть сайт


