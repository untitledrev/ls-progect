mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)


mixin title__site(className)
    span(class=`title-site__left__text${className}`)  #{about.site_name} 
    span(class=`title-site__left__text${className}`)   #{about.site_name_2} 


mixin title__name(className)
    span(class=`title-site__right__text${className}`)  #{about.name}
    span(class=`title-site__right__text${className}`)  #{about.fistname}  


mixin title(className)
  div(class=`title-site__left${className}`)
    +title__site(`${className}`)
  div(class=`title-site__right${className}`)  
    +title__name(`${className}`)


mixin title_footer(className)
  div(class=`title-site__left${className}`)
    +title__name(`${className}`)
  div(class=`title-site__right${className}`)  
    +title__site(`${className}`)  



mixin nav(className,activeItem)

  nav(class=`${className}`)
    ul(class=`${className}__list`)
      each item in menu
        li(class=`${className}__item`)
          a(class=`${className}__link` href=`#${item.url}`) #{item.name}

mixin sohibal(classNameS,items,classNameD)
  div(class=`${classNameS} ${classNameD}`)
    ul(class=`${classNameS}__list`)
      each item in items
        li(class=`${classNameS}__item`)
          a(class=`${classNameS}__link` href="#")
            +icon(`${item}`, 'link-class')
mixin desciption(className)

  ul(class=`${className}__list`)
    each item in about__info
      li(class=`${className}__item`)
        span(class=`${className}__name`) #{item.name}:
        span(class=`${className}__desciption`) #{item.desciption}

